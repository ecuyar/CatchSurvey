<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/surveybackground"
    android:orientation="vertical"
    android:padding="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/surveyquestionbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20sp">

        <Button
            android:id="@+id/bPoint5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/surveybutton"
            android:text="5 (Çok İyi)"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bPoint4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/surveybutton"
            android:text="4 (İyi)"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bPoint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/surveybutton"
            android:text="3 (Orta)"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bPoint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/surveybutton"
            android:text="2 (Kötü)"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bPoint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/surveybutton"
            android:text="1 (Çok Kötü)"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtAvg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>