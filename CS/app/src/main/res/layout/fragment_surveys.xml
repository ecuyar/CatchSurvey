<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/mainreal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/music"
            android:hint="Müzik"
            android:textColorHint="#ffffff"
            android:drawableTop="@drawable/music"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/survey_shape"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
             />

        <Button
            android:id="@+id/apptool"
            android:hint="Uygulamalar"
            android:textColorHint="#ffffff"
            android:drawableTop="@drawable/apptool"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/survey_shape"
            android:textSize="16sp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/vehicle"
                android:hint="Araçlar"
                android:textColorHint="#ffffff"
                android:drawableTop="@drawable/vehicle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/survey_shape"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:onClick="VehicleSurvey"
                />

            <Button
                android:id="@+id/movie"
                android:hint="Filmler"
                android:textColorHint="#ffffff"
                android:drawableTop="@drawable/movie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/survey_shape"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/books"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/survey_shape"
                android:drawableTop="@drawable/books"
                android:hint="Kitaplar"
                android:onClick="openBooks"
                android:textColorHint="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/survey"
                android:hint="Genel Anketler"
                android:textColorHint="#ffffff"
                android:drawableTop="@drawable/survey"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/survey_shape"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>